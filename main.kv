# main.kv



MDScreenManager:
    TelaLogin:
        id: tela_login
    TelaRegistro:
        id: tela_registro
    TelaPrincipal:
        id: tela_principal
    TelaCadastroProcedimentos:
        id: tela_cadastro_procedimentos
    TelaPesquisa:
        id: tela_pesquisa
    TelaProcedimentos:
        id: tela_procedimentos

<TelaLogin>:
    name: "tela_login"
    BoxLayout:
        orientation: "vertical"
        spacing: 20
        TextInput:
             id: nome_usuario_input
             hint_text: "Digite seu nome de usuário"



<TelaRegistro>:
    name: "tela_registro"
    BoxLayout:
        orientation: "vertical"
        spacing: 20


